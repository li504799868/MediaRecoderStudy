<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/start_audio_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始录音"/>

    <Button
            android:id="@+id/stop_audio_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止录音"/>

    <Button
            android:id="@+id/play_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放录音"/>

    <Button
            android:id="@+id/media_codec_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用MediaCodec解码播放视频文件"/>

    <Button
            android:id="@+id/start_video_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始录制视频"/>

    <Button
            android:id="@+id/stop_video_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止录制视频"/>

    <Button
            android:id="@+id/play_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放视频"/>

    <Button
            android:id="@+id/combine_audio_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音视频合成"/>

    <Button
            android:id="@+id/play_combine_audio_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放合成文件"/>

</LinearLayout>